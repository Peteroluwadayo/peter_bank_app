<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#4A78D5"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordLifeInsurance">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_baseline_security_white_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Life Insurance"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provide your email and password reset instruction will be sent to your email box"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="EMAIL"
            android:background="@drawable/lifeinsurance_bos"
            android:textColorHint="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signupbutton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="RESET PASSWORD"
                android:textSize="12sp"
                android:textColor="#151413"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_boxmii"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/btn_backtologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Login"
                android:layout_marginTop="20dp"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>