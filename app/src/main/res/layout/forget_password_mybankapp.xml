<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forgetpassword_background"
    android:orientation="vertical"
    tools:context=".ForgetPasswordMyBankApp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/arrow"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_baseline_arrow_back_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    android:text="FORG0T PASSWORD"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="60dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="515dp"
                android:orientation="vertical"
                android:background="@drawable/forgetpassword_back">

                <EditText
                    android:id="@+id/et_internetbanking"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/login_box"
                    android:layout_marginLeft="20dp"
                    android:hint="INTERNET BANKING ID"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <EditText
                    android:id="@+id/et_accountnumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_box"
                    android:layout_marginLeft="20dp"
                    android:hint="ACCOUNT NUMBER LINKED TO YOUR DEBIT CARD"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signupbutton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#45837D"
                android:text="NEXT"
                android:textSize="16sp"/>




        </LinearLayout>
    </ScrollView>
</LinearLayout>