<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020A37"
    android:orientation="vertical"
    tools:context=".RequestQuoteLifeInsurance">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_west_24"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="90dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REQUEST QUOTE"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"/>
        </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a plan to request quote"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:orientation="vertical"
                android:layout_marginTop="30dp"
                    android:background="@drawable/lifeinsurancequotebackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/teamassurance_lifeinsurance">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TERM ASSURANCE"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"/>

                    <View
                        android:layout_width="190dp"
                        android:layout_height="30dp"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_baseline_verified_user_24"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>


            </LinearLayout>




















        </LinearLayout>
    </ScrollView>
</LinearLayout>