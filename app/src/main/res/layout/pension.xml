<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/pension_background"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Pension">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                android:id="@+id/arrow"
                android:layout_weight="0"
                android:layout_width="20dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                android:background="@drawable/ic_baseline_arrow_back_24"/>

            <View
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_weight="11"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"/>

            <View
                android:id="@+id/image"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_security_white_24"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:text="Please enter your Email,RSA Pin or Phone number to log into pension"/>

            <EditText
                android:id="@+id/et_pin_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email-RSA Pin-Phone"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="12sp"
                android:paddingLeft="20dp"
                android:textColorHint="@color/white"
                android:background="@drawable/pentionmi_round"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/pentionmi_round"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_my_password"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:hint="Password"
                    android:layout_weight="13"
                    android:textColorHint="@color/white"
                    android:inputType="textPassword"
                    android:textSize="12sp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />

                <View
                    android:id="@+id/eyemutual"
                    android:layout_weight="1"
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/ic_baseline_visibility_24"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:text="Remember Email-RSA Pin-Phone"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signUpButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="Login"
                android:background="@drawable/logimi_round"
                android:textColor="#0649BD"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="40dp">

                <View
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/ic_baseline_question_mark_24"/>

                <TextView
                android:layout_weight="1"
                android:id="@+id/btn_forgotpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                android:text="Forget Password?"
                android:textStyle="bold"
                android:textSize="11sp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>