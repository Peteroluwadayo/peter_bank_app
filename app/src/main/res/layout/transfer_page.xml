<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#12206E"
    android:layout_height="match_parent"
    tools:context=".TransferPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/boxround_yes">

                    <LinearLayout
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/ic_baseline_notifications_24">
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"/>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/boxround_yes">

                    <LinearLayout
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/ic_baseline_panorama_fish_eye_24">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer Money"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How would you like to transfer money?"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/transferbox_one">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer to self"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="18dp"/>

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="3"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/transferbox_one">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer to Stanbic IBTC Account"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="18dp"/>

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="3"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/transferbox_one">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer to Beneficiary"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="18dp"/>

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="3"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/transferbox_one">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer to Other Bank"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="18dp"/>

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="3"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/transferbox_one">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer to @ease Account"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="18dp"/>

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="3"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/transferbox_one">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flex Border"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="18dp"/>

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="3"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/transferbox_one">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beneficiaries"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="18dp"/>

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="3"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/transferbox_one">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FX Payment"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="18dp"/>

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="3"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/transferbox_one">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-Naira Wallet"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="18dp"/>

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="3"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#223ABC"
                android:background="@drawable/transferbottoncolor_background"
                android:textSize="12sp"
                android:text="Transaction History"/>

    //        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_baseline_home_24"/>

                    <TextView
                        android:id="@+id/btn_home"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Home"/>
                </LinearLayout>
                <View
                    android:layout_width="30dp"
                    android:layout_weight="3"
                    android:layout_height="30dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_baseline_account_balance_24"/>

                    <TextView
                        android:id="@+id/btn_transfer"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Transfer"/>
                </LinearLayout>
                <View
                    android:layout_width="30dp"
                    android:layout_weight="3"
                    android:layout_height="30dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_baseline_video_label_24"/>

                    <TextView
                        android:id="@+id/btn_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="payment"/>
                </LinearLayout>
                <View
                    android:layout_width="30dp"
                    android:layout_weight="3"
                    android:layout_height="30dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_baseline_person_24"/>

                    <TextView
                        android:id="@+id/btn_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="profile"/>
                </LinearLayout>

                <View
                    android:layout_width="30dp"
                    android:layout_weight="3"
                    android:layout_height="30dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:text="..."/>

                    <TextView
                        android:id="@+id/btn_more"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="more"/>
                </LinearLayout>
  //      </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>