<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#051B2C"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".OnePass">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:id="@+id/viewbutton"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/btn_instantaccount"
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingRight="90dp"
                android:layout_gravity="center"
                android:textSize="8sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="Forgot Password"
                android:layout_marginLeft="20dp"
                android:textSize="8sp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:layout_weight="1"/>
        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome "
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login with your OnePassID"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/et_onepassid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="OnePassID"
                android:inputType="text"
                android:textSize="12sp"
                android:textColorHint="@color/white"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/onepass_box"
                android:paddingLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/onepass_box"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="PASSWORD"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="8"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="110dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/viewlogo"
                    android:layout_weight="1"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_baseline_visibility_24"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:text="Remember my OnePassID"
                    android:layout_marginTop="12dp"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signupbutton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="Login"
                android:background="@drawable/logimi_round"
                android:textColor="#0649BD"/>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="40dp">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_baseline_bolt_24"/>

                <TextView
                    android:id="@+id/btn_newuserid"
                    android:layout_width="10dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="New User?Create a OnePassID"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>