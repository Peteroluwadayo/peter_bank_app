<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mybank_background"
    android:layout_height="match_parent"
    tools:context=".CreateANewBankAccount">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/arrow"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_baseline_arrow_back_24"/>

                <View
                    android:layout_width="20dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACCOUNT CREATION"
                    android:layout_marginRight="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp" />

                <View
                    android:layout_width="20dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/account_instant">

                <View
                    android:id="@+id/image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_baseline_security_white_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instant account"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You will be creating a tier 1 account enter your BVN to create your instant account"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/et_bvnnumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="BVN NUMBER"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_create"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/et_yourbvn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="ENTER A PHONE NUMBER TIED TO YOUR BVN"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_create"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/et_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="FIRST NAME"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_create"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/et_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="LAST NAME"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_create"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/et_dateofbirth"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Select date of birth"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_create"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#2946CC"
                android:text="NEXT"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
