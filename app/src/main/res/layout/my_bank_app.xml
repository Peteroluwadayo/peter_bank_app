<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mybank_background"
    android:layout_height="match_parent"
    tools:context=".MyBankApp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/arrow"
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_baseline_arrow_back_24"/>

                <View
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="11"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:id="@+id/image"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/stabic"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New here? Register for online Banking"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"/>



            <EditText
                android:id="@+id/et_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Internet Banking ID"
                android:textColorHint="@color/white"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingLeft="16dp"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_login"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="16dp"
                android:hint="Password"
                android:textColorHint="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_login"
                android:inputType="textPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:layout_weight="1"
                   android:id="@+id/btn_save_internetbanking"
                   android:layout_width="0dp"
                   android:textColor="@color/white"
                   android:layout_marginTop="15dp"
                   android:layout_height="wrap_content"
                   android:text="Save Internet Banking"
                   android:layout_marginLeft="20dp"
                   android:textSize="14sp" />

               <androidx.appcompat.widget.SwitchCompat
                   android:id="@+id/switch1"
                   android:layout_weight="1"
                   android:layout_marginTop="15dp"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="20dp"/>

           </LinearLayout>
       </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#0E2FE3"
                android:layout_marginTop="10dp"
                android:text="Login"
                android:background="@drawable/foreget_passcodelogin"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/circle_question_mark">

                    <View
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_width="10dp"
                        android:layout_height="7dp"
                        android:background="@drawable/ic_baseline_question_mark_24"/>



                </LinearLayout>


                <TextView
                    android:layout_weight="1"
                    android:id="@+id/btn_forgotpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:text="Forget Password?"
                    android:textStyle="bold"
                    android:textSize="11sp"/>

                <View
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp" />



                <View
                    android:layout_weight="1"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_baseline_ac_unit_24"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/btn_unlink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginRight="40dp"
                    android:textStyle="bold"
                    android:text="Unlink this device"
                    android:textSize="11sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/thunderlayout_mybankapp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_baseline_bolt_24"/>


                    <TextView
                        android:id="@+id/btn_create_a_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1010ED"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:text="Create a new "
                        android:layout_gravity="center"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1010ED"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:text="Bank Account"
                        android:layout_gravity="center"/>


                </LinearLayout>


                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/calllayout_mybankapp"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/phone"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_baseline_phone_enabled_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:text="Call Customer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:text="Care" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>